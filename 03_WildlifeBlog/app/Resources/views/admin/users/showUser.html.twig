{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin-list-users.css') }}">
{% endblock %}

{% block main %}
    <div class="wrapper">
        <form name="username_filter" method="post">
            <input type="text" id="username_filter_username" name="username_filter[username]" required="required"
                   placeholder="Search username">
            <button type="submit" id="username_filter_submit" name="username_filter[submit]"
                    class="btn btn-primary mb-2">Submit
            </button>
            {{ form_row(form._token) }}
        </form>

        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row">{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('banUser', {'id':  user.id }) }}">Ban</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}

{% block footer %}
    <footer></footer>
{% endblock %}