{% extends 'base.html.twig' %}
{% block title %}
    Register
{% endblock %}
{% block main %}
    {% if error %}
        <div class="alert alert-danger" role="alert">
            <strong>Error!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <form name="app_bundle_user_register" method="post">
        <div id="app_bundle_user_register">
            <div class="form-group">
                <label for="app_bundle_user_register_username" class="required">Username</label>
                <input type="text" class="form-control" id="app_bundle_user_register_username" name="app_bundle_user_register[username]" required="required">
                <div class="errorMsg" id="invalidUsername"></div>
            </div>

            <div class="form-group">
                <label for="app_bundle_user_register_email" class="required">Email</label>
                <input type="email" class="form-control" id="app_bundle_user_register_email" name="app_bundle_user_register[email]" required="required">
                <div class="errorMsg" id="invalidEmail"></div>
            </div>

            <div class="form-group">
                <label for="app_bundle_user_register_password_first" class="required">Password</label>
                <input type="password" class="form-control" id="app_bundle_user_register_password_first" name="app_bundle_user_register[password][first]" required="required">
                <div class="errorMsg" id="invalidPassword"></div>
            </div>

            <div class="form-group">
                <label for="app_bundle_user_register_password_second" class="required">Repeat Password</label>
                <input type="password" class="form-control" id="app_bundle_user_register_password_second" name="app_bundle_user_register[password][second]" required="required">
                <div class="errorMsg" id="invalidConfirmPassword"></div>
            </div>
            {{ form_row(form._token) }}
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="app_bundle_user_register_submit" name="app_bundle_user_register[submit]">Submit</button>
            </div>
        </div>
    </form>
{% endblock %}