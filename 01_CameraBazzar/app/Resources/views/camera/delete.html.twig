{% extends 'base.html.twig' %}
{% block title %}
    Delete Camera
{% endblock %}
{% block main %}
    <form name="camera" method="post" action="{{ path('deleteCamera', {'id': camera.id}) }}">
        <div class="form-group">
            <div>
                <label for="camera_make" class="required">Make:</label>
                <input type="text" id="camera_make" class="form-control"
                       name="camera[make]" required="required" value="{{ camera.make }}" disabled>
            </div>
            <div>
                <label for="camera_model" class="required">Model:</label>
                <input type="text" id="camera_model" class="form-control"
                       name="camera[model]" required="required" value="{{ camera.model }}" disabled>
            </div>
            <div>
                <label for="camera_price" class="required">Price:</label>
                <input type="text" id="camera_price" class="form-control"
                       name="camera[price]" required="required" value="{{ camera.price }}" disabled>
            </div>
            <div>
                <label for="camera_minShutterSpeed" class="required">Min Shutter Speed:</label>
                <input type="text" id="camera_minShutterSpeed" class="form-control"
                       name="camera[minShutterSpeed]" required="required" value="{{ camera.minShutterSpeed }}" disabled>
            </div>
            <div>
                <label for="camera_maxShutterSpeed" class="required">Max Shutter Speed:</label>
                <input type="text" class="form-control"
                       id="camera_maxShutterSpeed"
                       name="camera[maxShutterSpeed]" disabled
                       required="required" value="{{ camera.maxShutterSpeed }}">
            </div>
            <div>
                <label for="camera_minIso" class="required">Min ISO:</label>
                <input type="text" id="camera_minIso" class="form-control"
                       name="camera[minIso]"
                       required="required" disabled
                       value="{{ camera.minIso }}">
            </div>
            <div>
                <label for="camera_maxIso" class="required">Max ISO:</label>
                <input type="text" id="camera_maxIso" class="form-control"
                       name="camera[maxIso]"
                       required="required" disabled
                       value="{{ camera.maxIso }}"></div>
            <div>
                <label for="camera_isFullFrame" class="required">Full Frame:</label>
                <select id="camera_isFullFrame" class="form-control" disabled
                        name="camera[isFullFrame]">
                    <option value="1">yes</option>
                    <option value="0">no</option>
                </select>
            </div>
            <div>
                <label for="camera_videoResolution" class="required">Video resolution:</label>
                <input type="text" class="form-control" disabled
                       id="camera_videoResolution"
                       name="camera[videoResolution]"
                       required="required"
                       value="{{ camera.videoResolution }}">
            </div>
            <div><label for="camera_description" class="required">Description:</label>
                <input type="text" class="form-control" disabled
                       id="camera_description"
                       name="camera[description]"
                       required="required"
                       value="{{ camera.description }}">
            </div>
            <div>
                <label for="camera_imageURL" class="required">Image URL:</label>
                <input type="text" id="camera_imageURL" class="form-control"
                       name="camera[imageURL]" disabled
                       required="required"
                       value="{{ camera.imageUrl }}"></div>
            <div>
                <label for="camera_lightMetering" class="required">Light metering:</label>
                <input type="text" class="form-control"
                       id="camera_lightMetering" disabled
                       name="camera[lightMetering]"
                       required="required"
                       value="{{ camera.lightMetering }}">
            </div>
            {{ form_row(form._token) }}
            <div>
                <button type="submit" id="camera_submit" name="camera[submit]"
                        class="btn btn-danger mb-2">Delete</button>
            </div>
        </div>
    </form>
{% endblock %}

