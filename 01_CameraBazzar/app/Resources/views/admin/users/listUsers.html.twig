{% extends 'base.html.twig' %}

{% block main %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td scope="row">{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone|default('Not specified') }}</td>
                <td>
                    <a href="{{ path('banUser', {'id':  user.id }) }}">Ban</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}