{% extends 'base.html.twig' %}
{% block title %}
    Welcome to Camera Bazaar
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <!-- Template From: -->
    <!-- https://startbootstrap.com/template-overviews/agency/ -->
    <link rel="stylesheet" href="{{ asset('css/agency.min.css') }}"/>
    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
{% endblock %}

{% block main %}
    <!-- Header -->
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">Capture every moment!</div>
                <div class="intro-heading text-uppercase">With your camera</div>
                {% if app.user %}
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="{{ path('listCameras') }}">View Cameras</a>
                {% else %}
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="{{ path('register') }}">Register</a>
                {% endif %}
            </div>
        </div>
    </header>
{% endblock %}
