{% extends 'base.html.twig' %}

{% block title %}
    Edit laptop
{% endblock %}

{% block main %}
    <form name="laptop_product" method="post">
        <div id="laptop_product">
            <div class="form-group">
                <label for="laptop_product_make" class="required">Make</label>
                <input type="text" class="form-control" id="laptop_product_make" name="laptop_product[make]" required="required"
                value="{{ laptop.make }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_model" class="required">Model</label>
                <input type="text" class="form-control" id="laptop_product_model" name="laptop_product[model]" required="required"
                       value="{{ laptop.model }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_originalPrice" class="required">Original price</label>
                <input type="text" class="form-control" id="laptop_product_originalPrice" name="laptop_product[originalPrice]" required="required"
                       value="{{ laptop.original_price }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_imageAddress" class="required">Image address</label>
                <input type="text" class="form-control" id="laptop_product_imageAddress" name="laptop_product[imageAddress]" required="required"
                       value="{{ laptop.image_address }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_discount" class="required">Discount</label>
                <input type="text" class="form-control" id="laptop_product_discount" name="laptop_product[discount]" required="required"
                value="{{ laptop.discount }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_quantity" class="required">Quantity</label>
                <input type="text" class="form-control" id="laptop_product_quantity" name="laptop_product[quantity]" required="required"
                       value="{{ laptop.quantity }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_ram" class="required">RAM (GB)</label>
                <input type="text" class="form-control" id="laptop_product_ram" name="laptop_product[ram]" required="required"
                value="{{ laptop.ram }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_processorFrequency" class="required">Processor Frequency (MHz)</label>
                <input type="text" class="form-control" id="laptop_product_processorFrequency" name="laptop_product[processorFrequency]" required="required"
                       value="{{ laptop.processor_frequency }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_processorMake" class="required">Processor Make</label>
                <input type="text" class="form-control" id="laptop_product_processorMake" name="laptop_product[processorMake]" required="required"
                value="{{ laptop.processor_make }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_processorModel" class="required">Processor Model</label>
                <input type="text" class="form-control" id="laptop_product_processorModel" name="laptop_product[processorModel]" required="required"
                value="{{ laptop.processor_model }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_videoCardMake" class="required">Video Card Make</label>
                <input type="text" class="form-control" id="laptop_product_videoCardMake" name="laptop_product[videoCardMake]" required="required"
                value="{{ laptop.video_card_make }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_capacity" class="required">Capacity (GB)</label>
                <input type="text" class="form-control" id="laptop_product_capacity" name="laptop_product[capacity]" required="required"
                value="{{ laptop.capacity }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_processorCores" class="required">Processor Cores</label>
                <input type="text" class="form-control" id="laptop_product_processorCores" name="laptop_product[processorCores]" required="required"
                value="{{ laptop.processor_cores }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_operationSystem" class="required">Operation system</label>
                <input type="text" class="form-control" id="laptop_product_operationSystem" name="laptop_product[operationSystem]" required="required"
                value="{{ laptop.operation_system }}">
            </div>

            <div class="form-group">
                <label for="laptop_product_weight" class="required">Weight</label>
                <input type="text" class="form-control" id="laptop_product_weight" name="laptop_product[weight]" required="required"
                value="{{ laptop.weight }}">
            </div>
            {{ form_row(form._token) }}
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="laptop_product_submit" name="laptop_product[submit]">Edit</button>
            </div>
        </div>
    </form>
{% endblock %}

