{% extends 'base.html.twig' %}

{% block title %}
    Edit Tv
{% endblock %}

{% block main %}
    <form name="tv_product" method="post">
        <div id="tv_product">
            <div class="form-group">
                <label for="tv_product_make" class="required">Make</label>
                <input type="text" class="form-control" id="tv_product_make" name="tv_product[make]" required="required"
                       value="{{ tv.make }}">
            </div>

            <div class="form-group">
                <label for="tv_product_model" class="required">Model</label>
                <input type="text" class="form-control" id="tv_product_model" name="tv_product[model]"
                       required="required"
                       value="{{ tv.model }}">
            </div>

            <div class="form-group">
                <label for="tv_product_originalPrice" class="required">Original price</label>
                <input type="text" class="form-control" id="tv_product_originalPrice" name="tv_product[originalPrice]"
                       required="required"
                       value="{{ tv.original_price }}">
            </div>

            <div class="form-group">
                <label for="tv_product_imageAddress" class="required">Image address</label>
                <input type="text" class="form-control" id="tv_product_imageAddress" name="tv_product[imageAddress]"
                       required="required"
                       value="{{ tv.image_address }}">
            </div>

            <div class="form-group">
                <label for="tv_product_discount" class="required">Discount</label>
                <input type="text" class="form-control" id="tv_product_discount" name="tv_product[discount]"
                       required="required"
                       value="{{ tv.discount }}">
            </div>

            <div class="form-group">
                <label for="tv_product_quantity" class="required">Quantity</label>
                <input type="text" class="form-control" id="tv_product_quantity" name="tv_product[quantity]"
                       required="required"
                       value="{{ tv.quantity }}">
            </div>

            <div class="form-group">
                <label for="tv_product_screenDiagonalSize" class="required">Screen Diagonal Size (Inches)</label>
                <input type="text" class="form-control" id="tv_product_screenDiagonalSize"
                       name="tv_product[screenDiagonalSize]" required="required"
                       value="{{ tv.screen_diagonal_size }}">
            </div>

            <div class="form-group">
                <label for="tv_product_isSmart">Is Smart</label>
                {% if tv.is_smart == 1 %}
                    <input type="checkbox" class="form-control" id="tv_product_isSmart" name="tv_product[isSmart]"
                           value="1" checked>
                {% else %}
                    <input type="checkbox" class="form-control" id="tv_product_isSmart" name="tv_product[isSmart]"
                           value="1">
                {% endif %}
            </div>

            <div class="form-group">
                <label for="tv_product_hasUSBPort">Has USB Port</label>
                {% if tv.has_usb_port == 1 %}
                    <input type="checkbox" class="form-control" id="tv_product_hasUSBPort" name="tv_product[hasUSBPort]"
                           value="1" checked>
                    {% else %}
                        <input type="checkbox" class="form-control" id="tv_product_hasUSBPort" name="tv_product[hasUSBPort]"
                               value="1">
                {% endif %}
            </div>

            <div class="form-group">
                <label for="tv_product_resolution" class="required">Resolution</label>
                <input type="text" class="form-control" id="tv_product_resolution" name="tv_product[resolution]"
                       required="required"  value="{{ tv.resolution }}">
            </div>

            <div class="form-group">
                <label for="tv_product_powerConsummation" class="required">Power Consummation (Watts)</label>
                <input type="text" class="form-control" id="tv_product_powerConsummation"
                       name="tv_product[powerConsummation]" required="required"
                        value="{{ tv.power_consummation }}">
            </div>

            <div class="form-group">
                <label for="tv_product_weight" class="required">Weight (Kg)</label>
                <input type="text" class="form-control" id="tv_product_weight" name="tv_product[weight]"
                       required="required"  value="{{ tv.weight }}">
            </div>

            <div class="form-group">
                <label for="tv_product_color" class="required">Color</label>
                <input type="text" class="form-control" id="tv_product_color" name="tv_product[color]"
                       required="required"  value="{{ tv.color }}">
            </div>

            {{ form_row(form._token) }}

            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="tv_product_submit" name="tv_product[submit]">Submit
                </button>
            </div>
        </div>
    </form>
{% endblock %}