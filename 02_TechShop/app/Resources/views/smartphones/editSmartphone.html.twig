{% extends 'base.html.twig' %}

{% block title %}
 Edit Smartphone
{% endblock %}

{% block main %}
    <form name="smartphone_product" method="post">
        <div id="smartphone_product">
            <div class="form-group">
                <label for="smartphone_product_make" class="required">Make</label>
                <input type="text" class="form-control" id="smartphone_product_make" name="smartphone_product[make]" required="required"
                value="{{ smartphone.make }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_model" class="required">Model</label>
                <input type="text" class="form-control" id="smartphone_product_model" name="smartphone_product[model]" required="required"
                       value="{{ smartphone.model }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_originalPrice" class="required">Original price</label>
                <input type="text" class="form-control" id="smartphone_product_originalPrice" name="smartphone_product[originalPrice]" required="required"
                       value="{{ smartphone.original_price }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_imageAddress" class="required">Image address</label>
                <input type="text" class="form-control" id="smartphone_product_imageAddress" name="smartphone_product[imageAddress]" required="required"
                       value="{{ smartphone.image_address }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_discount" class="required">Discount</label>
                <input type="text" class="form-control" id="smartphone_product_discount" name="smartphone_product[discount]" required="required"
                       value="{{ smartphone.discount }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_quantity" class="required">Quantity</label>
                <input type="text" class="form-control" id="smartphone_product_quantity" name="smartphone_product[quantity]" required="required"
                       value="{{ smartphone.quantity }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_ram" class="required">Ram</label>
                <input type="text" class="form-control" id="smartphone_product_ram" name="smartphone_product[ram]" required="required"
                       value="{{ smartphone.ram }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_resolution" class="required">Resolution</label>
                <input type="text" class="form-control" id="smartphone_product_resolution" name="smartphone_product[resolution]" required="required"
                       value="{{ smartphone.resolution }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_frontCameraResolution" class="required">Front Camera Resolution (Mpx)</label>
                <input type="text" class="form-control" id="smartphone_product_frontCameraResolution" name="smartphone_product[frontCameraResolution]" required="required"
                       value="{{ smartphone.front_camera_resolution }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_backCameraResolution" class="required">Back Camera Resolution (Mpx)</label>
                <input type="text" class="form-control" id="smartphone_product_backCameraResolution" name="smartphone_product[backCameraResolution]" required="required"
                       value="{{ smartphone.back_camera_resolution }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_screenDiagonalSize" class="required">Screen diagonal size (Inches)</label>
                <input type="text" class="form-control" id="smartphone_product_screenDiagonalSize" name="smartphone_product[screenDiagonalSize]" required="required"
                value="{{ smartphone.screen_diagonal_size }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_memory" class="required">Memory (GB)</label>
                <input type="text" class="form-control" id="smartphone_product_memory" name="smartphone_product[memory]" required="required"
                value="{{ smartphone.memory }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_processorFrequency" class="required">Processor frequency (MHz)</label>
                <input type="text" class="form-control" id="smartphone_product_processorFrequency" name="smartphone_product[processorFrequency]" required="required"
                value="{{ smartphone.processor_frequency }}">
            </div>

            <div class="form-group">
                <label for="smartphone_product_color" class="required">Color</label>
                <input type="text" class="form-control" id="smartphone_product_color" name="smartphone_product[color]" required="required"
                value="{{ smartphone.color }}">
            </div>
            {{ form_row(form._token) }}
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="smartphone_product_submit" name="smartphone_product[submit]">Submit</button>
            </div>
        </div>
    </form>
{% endblock %}

