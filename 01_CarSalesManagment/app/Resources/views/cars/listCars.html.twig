{% extends 'base.html.twig' %}

{% block main %}
    <table>
        <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Travelled Distance</th>
        </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.make }}</td>
                <td>{{ car.model }}</td>
                <td>{{ car.travelledDistance }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}